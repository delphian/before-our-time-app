<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="BeforeOurTime.MobileApp.Pages.Admin.ScriptEditor.ScriptEditorPage"
             xmlns:local="clr-namespace:BeforeOurTime.MobileApp.Controls"
             Title="Javascript Editor"
             BackgroundColor="#202020">
    <ContentPage.Content>
        <StackLayout>
            <Editor x:Name="ScriptEditor"
                    VerticalOptions="FillAndExpand"
                    HorizontalOptions="FillAndExpand"
                    Text="{Binding Script}"
                    Margin="10"
                    BackgroundColor="#404040"
                    TextColor="White" />
            <FlexLayout x:Name="ButtonsFlexLayout"
                        VerticalOptions="End"
                        HorizontalOptions="FillAndExpand"
                        Margin="10, 0, 10, 10">
                <Button x:Name="UpdateButton"
                        Clicked="UpdateButton_Clicked"
                        VerticalOptions="End"
                        HorizontalOptions="FillAndExpand"
                        Text="Update"
                        BackgroundColor="#806060"
                        FlexLayout.Basis="50%" />
                <Button x:Name="CancelButton"
                        Clicked="CancelButton_Clicked"
                        VerticalOptions="End"
                        HorizontalOptions="FillAndExpand"
                        Text="Cancel"
                        BackgroundColor="#608060"
                        BorderRadius="10"
                        Margin="10, 0, 0, 0"
                        FlexLayout.Basis="50%" />
            </FlexLayout>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>