<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:converters="clr-namespace:BeforeOurTime.MobileApp.Converters"
             x:Class="BeforeOurTime.MobileApp.Pages.Account.Character.AccountCharacterPage">
    <ContentPage.Resources>
        <converters:NotBooleanConverter x:Key="inverter" />
    </ContentPage.Resources>
    <ContentPage.Content>
        <StackLayout>
            <StackLayout IsVisible="{Binding Working}" VerticalOptions="CenterAndExpand" HorizontalOptions="CenterAndExpand">
                <ActivityIndicator Color="Blue" IsRunning="{Binding Working}" IsVisible="{Binding Working}" VerticalOptions="CenterAndExpand" HorizontalOptions="CenterAndExpand"></ActivityIndicator>
            </StackLayout>
            <StackLayout IsVisible="{Binding Working, Converter={StaticResource inverter}}"
                         VerticalOptions="FillAndExpand"
                         HorizontalOptions="FillAndExpand">
                <StackLayout VerticalOptions="FillAndExpand"
                             HorizontalOptions="FillAndExpand">
                    <ListView 
                        x:Name="CharacterListView"
                        IsVisible="True"
                        ItemsSource="{Binding Characters}" 
                        ItemSelected="CharacterListView_ItemSelected"
                        VerticalOptions="FillAndExpand"
                        HorizontalOptions="FillAndExpand"
                        Margin="0, 10, 0, 0">
                        <ListView.Header>
                            <Label Text="Select Character to Play" 
                                   FontSize="Medium"
                                   Margin="0, 0, 0, 10"/>
                        </ListView.Header>
                        <ListView.ItemTemplate>
                            <DataTemplate>
                                <ViewCell>
                                    <Frame BorderColor="LightGray" Margin="0" Padding="2" >
                                        <StackLayout BackgroundColor="WhiteSmoke" 
                                                     Orientation="Horizontal"
                                                     Padding="2">
                                            <StackLayout Orientation="Vertical" Padding="2">
                                                <Label FontAttributes="Bold" Margin="0" Text="{Binding CharacterItem.Visible.Name}"></Label>
                                                <Label Margin="0" Text="{Binding CharacterItem.Visible.Description}"></Label>
                                            </StackLayout>
                                            <StackLayout IsVisible="{Binding IsSelected}" 
                                                         Orientation="Horizontal"
                                                         HorizontalOptions="EndAndExpand"
                                                         VerticalOptions="CenterAndExpand">
                                                <Button Text="Play"
                                                    HorizontalOptions="StartAndExpand"
                                                    VerticalOptions="FillAndExpand"
                                                    Margin="0, 0, 6, 0"
                                                    WidthRequest="100"
                                                    BackgroundColor="LightGreen"
                                                    CornerRadius="10"
                                                    BorderColor="Black" />
                                                <Button Text="Edit"
                                                    HorizontalOptions="StartAndExpand"
                                                    VerticalOptions="FillAndExpand"
                                                    Margin="0, 0, 0, 3"
                                                    WidthRequest="100"
                                                    BackgroundColor="LightYellow"
                                                    CornerRadius="10"
                                                    BorderColor="Black" />
                                            </StackLayout>
                                        </StackLayout>
                                    </Frame>
                                </ViewCell>
                            </DataTemplate>
                        </ListView.ItemTemplate>
                    </ListView>
                </StackLayout>
            </StackLayout>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>