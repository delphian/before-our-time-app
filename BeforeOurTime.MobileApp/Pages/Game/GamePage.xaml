<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:local="clr-namespace:BeforeOurTime.MobileApp.Controls"             
             x:Class="BeforeOurTime.MobileApp.Pages.Game.GamePage"
             Title="{Binding LocationName}">
    <ContentPage.Content>
        <FlexLayout Direction="Column"
            Margin="10"
            VerticalOptions="FillAndExpand"
            HorizontalOptions="FillAndExpand">
            <StackLayout
                FlexLayout.Basis="75%"
                FlexLayout.Shrink="1"
                VerticalOptions="Start"
                HorizontalOptions="FillAndExpand">
                <Label Text="{Binding LocationName}" FontAttributes="Bold" HorizontalOptions="FillAndExpand" VerticalOptions="Start" />
                <Label Text="{Binding LocationDescription}" FontSize="Small" HorizontalOptions="FillAndExpand" VerticalOptions="Start" />
                <ListView
                    VerticalOptions="Start"
                    HorizontalOptions="FillAndExpand"
                    ItemsSource="{Binding EventStream.Events}">
                    <ListView.ItemTemplate>
                        <DataTemplate>
                            <ViewCell>
                                <Label Text="{Binding Message}" />
                            </ViewCell>
                        </DataTemplate>
                    </ListView.ItemTemplate>
                </ListView>
                <local:ItemTableControl
                    x:Name="LocationItemTable"
                    VerticalOptions="EndAndExpand"
                    HorizontalOptions="CenterAndExpand"
                    Margin="0, 0, 0, 20"
                    Wrap="Wrap"
                    Items="{Binding Objects}"
                    OnClicked="{Binding LocationItemTable_OnClicked}" />
            </StackLayout>
            <FlexLayout Direction="Row"
                FlexLayout.Basis="25%"
                VerticalOptions="FillAndExpand"
                HorizontalOptions="FillAndExpand">
                <StackLayout
                    VerticalOptions="FillAndExpand"
                    HorizontalOptions="FillAndExpand"
                    FlexLayout.Basis="25%"
                    FlexLayout.Grow="1">
                    <Label Text="Left"
                        HorizontalOptions="CenterAndExpand"
                        VerticalOptions="CenterAndExpand"></Label>
                </StackLayout>
                <Frame FlexLayout.Basis="50%"
                       VerticalOptions="FillAndExpand"
                       Margin="0"
                       Padding="0"
                       BorderColor="LightGray">
                    <StackLayout Orientation="Horizontal"
                        VerticalOptions="FillAndExpand"
                        HorizontalOptions="FillAndExpand">
                        <Button Text="W"
                            Clicked="ButtonWest_OnClicked"
                            WidthRequest="50"
                            HeightRequest="50"
                            VerticalOptions="CenterAndExpand"
                            HorizontalOptions="FillAndExpand"
                            BorderRadius="10"></Button>
                        <StackLayout
                            VerticalOptions="FillAndExpand"
                            HorizontalOptions="FillAndExpand">
                            <Button Text="N"
                                Clicked="ButtonNorth_OnClicked"
                                WidthRequest="50"
                                HeightRequest="50"
                                VerticalOptions="StartAndExpand"
                                BorderRadius="10"></Button>
                            <Button Text="S"
                                Clicked="ButtonSouth_OnClicked"
                                WidthRequest="50"
                                HeightRequest="50"
                                VerticalOptions="EndAndExpand"
                                BorderRadius="10"></Button>
                        </StackLayout>
                        <Button Text="E"
                            Clicked="ButtonEast_OnClicked"
                            WidthRequest="50"
                            HeightRequest="50"
                            VerticalOptions="CenterAndExpand"
                            HorizontalOptions="FillAndExpand"
                            BorderRadius="10"></Button>
                    </StackLayout>
                </Frame>
                <StackLayout
                    VerticalOptions="FillAndExpand"
                    HorizontalOptions="FillAndExpand"
                    FlexLayout.Basis="25%">
                    <StackLayout IsVisible="{Binding IsItemSelected}"
                        VerticalOptions="FillAndExpand"
                        HorizontalOptions="FillAndExpand"
                        Margin="5, 0, 0, 0">
                        <ListView
                            ItemSelected="CommandListView_ItemSelected"
                            ItemsSource="{Binding Commands}">
                            <ListView.ItemTemplate>
                                <DataTemplate>
                                    <ViewCell>
                                        <Frame 
                                            BorderColor="LightGray"
                                            Padding="0">
                                            <Label 
                                                Text="{Binding Name}"
                                                HorizontalOptions="CenterAndExpand"
                                                Margin="4"></Label>
                                        </Frame>
                                    </ViewCell>
                                </DataTemplate>
                            </ListView.ItemTemplate>
                        </ListView>
                    </StackLayout>
                </StackLayout>
            </FlexLayout>
        </FlexLayout>
    </ContentPage.Content>
</ContentPage>