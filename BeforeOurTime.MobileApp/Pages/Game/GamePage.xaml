<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:local="clr-namespace:BeforeOurTime.MobileApp.Controls"             
             x:Class="BeforeOurTime.MobileApp.Pages.Game.GamePage"
             Title="{Binding LocationName}">
    <ContentPage.Content>
        <FlexLayout Direction="Column"
            Margin="10"
            VerticalOptions="FillAndExpand"
            HorizontalOptions="FillAndExpand">
            <StackLayout
                FlexLayout.Basis="75%"
                FlexLayout.Shrink="1"
                VerticalOptions="Start"
                HorizontalOptions="FillAndExpand">
                <Label Text="{Binding LocationName}" FontAttributes="Bold" HorizontalOptions="FillAndExpand" VerticalOptions="Start" />
                <Label Text="{Binding LocationDescription}" FontSize="Small" HorizontalOptions="FillAndExpand" VerticalOptions="Start" />
                <local:ItemTableControl
                    x:Name="LocationItemTable"
                    VerticalOptions="StartAndExpand"
                    HorizontalOptions="FillAndExpand"
                    Wrap="Wrap"
                    Items="{Binding Objects}"
                    OnClicked="{Binding LocationItemTable_OnClicked}" />
                <StackLayout IsVisible="{Binding IsItemSelected}">
                    <ListView
                        ItemSelected="CommandListView_ItemSelected"
                        ItemsSource="{Binding Commands}">
                        <ListView.ItemTemplate>
                            <DataTemplate>
                                <ViewCell>
                                    <Frame 
                                        BorderColor="LightGray"
                                        Padding="0">
                                        <Label 
                                            Text="{Binding Name}"
                                            HorizontalOptions="CenterAndExpand"
                                            Margin="4"></Label>
                                    </Frame>
                                </ViewCell>
                            </DataTemplate>
                        </ListView.ItemTemplate>
                    </ListView>
                </StackLayout>
            </StackLayout>
            <FlexLayout Direction="Row"
                FlexLayout.Basis="25%"
                VerticalOptions="FillAndExpand"
                HorizontalOptions="FillAndExpand">
                <StackLayout
                    VerticalOptions="FillAndExpand"
                    HorizontalOptions="FillAndExpand"
                    FlexLayout.Basis="25%"
                    FlexLayout.Grow="1">
                    <Label Text="Left"></Label>
                </StackLayout>
                <Frame FlexLayout.Basis="50%">
                    <StackLayout
                        VerticalOptions="FillAndExpand"
                        HorizontalOptions="FillAndExpand">
                        <Label Text="Center"></Label>
                    </StackLayout>
                </Frame>
                <StackLayout
                    VerticalOptions="FillAndExpand"
                    HorizontalOptions="FillAndExpand"
                    FlexLayout.Basis="25%">
                    <Label Text="Right"></Label>
                </StackLayout>
            </FlexLayout>
            <Label Text="{Binding EventStream}" 
                FlexLayout.Grow="1"
                HorizontalOptions="StartAndExpand" 
                VerticalOptions="EndAndExpand" />
        </FlexLayout>
    </ContentPage.Content>
</ContentPage>